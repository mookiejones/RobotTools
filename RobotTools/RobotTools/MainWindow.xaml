                  d:DataContext="{d:DesignInstance Type=vm:MainViewModel,IsDesignTimeCreatable=True}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <editor:AvalonEditor
            ShowLineNumbers="True"
            />

    </Grid>
