<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="HighlightDarkColor">#086F9E</Color>
    <Color x:Key="HighlightLightColor">#41B1E1</Color>
    <SolidColorBrush x:Key="HighlightDarkBrush" Color="{DynamicResource HighlightDarkColor}" />
    <SolidColorBrush x:Key="HighlightLightBrush" Color="{DynamicResource HighlightLightColor}" />

    <!-- Background Brush -->
    <LinearGradientBrush x:Key="BackgroundBrush" MappingMode="Absolute" StartPoint="0,0" EndPoint="0,180">
        <GradientStop Color="#808080" />
        <GradientStop Color="White" Offset="1" />
    </LinearGradientBrush>


    <LinearGradientBrush x:Key="WindowBackgroundBrush" EndPoint="0,180" MappingMode="Absolute" StartPoint="0,0">
        <GradientStop Color="#FFDEDEDE" />
        <GradientStop Color="White" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>